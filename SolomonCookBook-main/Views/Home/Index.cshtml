@model IEnumerable<SolomonCookBook.Models.Recepies>
<div class="flex" style="justify-content:end">
    <div class="d-inline-block">
        <input type="search" placeholder="Search a Recepie" class="form-control "/>
    </div>
    <div class="d-inline-block">
        <button class="btn btn-outline-primary">Search</button>
    </div>
</div>
<div class="row container mt-5">
    
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="../@item.image_url" alt="Card image cap" height="300px" width="300px">
                    <div class="card-body">
                        <h5 class="card-title">@item.Recepie_Name</h5>
                         <a href='@Url.Action("recepieDetails","Home",new{id=@item.Recepie_ID})' >Details</a>
                    </div>
                </div>
                <br/>
                <br/>
                 
            </div>
             
        }
   
</div>





